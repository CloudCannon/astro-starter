---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { data, slug } = Astro.props;

const { thumb_image_path, thumb_image_alt, title, date, tags } = data;

const dateObj = new Date(date);
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{jpeg,jpg,png,gif,svg,avif}",
  { eager: true }
);

const imageSrc = images[thumb_image_path]?.default ?? thumb_image_path;
---

<div>
  <a href={`/blog/${slug}`}>
    <Image
      class={`blog-grid-image`}
      src={imageSrc}
      alt={thumb_image_alt}
      loading="lazy"
    />
  </a>
  <div>
    {
      tags ? (
        <div class="blog-summary-tags">
          {tags.map((tag: string) => {
            return (
              <a href={`/tags/${tag}/`}>
                <span>{tag.charAt(0).toUpperCase() + tag.slice(1)}</span>
              </a>
            );
          })}
        </div>
      ) : (
        ""
      )
    }
    <a href={`/blog/${slug}/`}>
      <h2 class="blog-summary-title">{title}</h2>
    </a>
    <p>
      {
        dateObj.toLocaleDateString(undefined, {
          year: "numeric",
          month: "long",
          day: "numeric",
        })
      }
    </p>
  </div>
</div>
