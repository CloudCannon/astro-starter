---
import slugify from "slugify";
const block = Astro.props;
---

<div class="popover">
  <button popovertarget={slugify(block.id)}>{block.button_text}</button>

  <div popover id={slugify(block.id)}>{block.popover_text}</div>
</div>

<style>
  .popover {
    position: relative;
  }

  div {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    background-color: beige;
    padding: 1rem;
    border-radius: 4px;
  }
</style>
